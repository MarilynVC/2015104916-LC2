@model IEnumerable<_2015104916.Entities.Entities.Automovil>

@{
    ViewBag.Title = "Automóviles - Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Índice</h2>

<p>
    @Html.ActionLink("Añadir", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Empresa Ensambladora
        </th>
        <th>
            Placa
        </th>
        <th>
            Parabrisas
        </th>
        <th>
            DNI Titular
        </th>
        <th>
            Volante
        </th>
        <th>
            Motor
        </th>
        <th>
            Chasis
        </th>
        <th>
            Tipo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ensambladora.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Placa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parabrisas.NumSerie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Propietario.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Volante.NumSerie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumSerieMotor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumSerieChasis)
        </td>
        <th>
            @Html.DisplayFor(model => item.TipoAuto)
        </th>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CarroId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CarroId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CarroId })
        </td>
    </tr>
}

</table>
